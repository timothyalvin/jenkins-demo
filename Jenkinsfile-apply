pipeline {
  agent {
    node {
      label 'nodejs'
    }
  }
  triggers {
    pollSCM ('H/3 * * * *')
  }
  options {
    disableConcurrentBuilds()
  }
  stages {
    stage ('Validate configuration resources') {
      steps {
        sh 'oc apply --dry-run --validate -k operatorhub_config'
      }
    }
    stage ('Apply resources') {
      when {
        branch 'main'
      }
      steps {
        sh 'oc apply -k operatorhub_config'
      }
    }
  }
}


